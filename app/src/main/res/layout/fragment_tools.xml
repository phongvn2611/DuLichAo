<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/llAlphabet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvATM"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Máy ATM"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/tvGAS"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Trạm xăng"
            android:textColor="@android:color/black"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btGet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tìm địa điểm"
        android:textAllCaps="false"
        android:gravity="center"
        android:layout_below="@+id/llAlphabet"
        />
    <TextView
        android:id="@+id/tvNoGPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh sách rỗng"
        android:textSize="32sp"
        android:layout_centerInParent="true"
        />
    <ListView
        android:id="@+id/lvSOS"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btGet">

    </ListView>
</RelativeLayout>